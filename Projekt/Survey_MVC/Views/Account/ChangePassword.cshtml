@model Survey_MVC.ViewModels.Account.ChangePasswordVM
@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change Your Password</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "Error occured while editing  account", new { @class = "text-danger" })
    <table>
        <tr>
            <td>
                @Html.LabelFor(m => m.oldPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(m => m.oldPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Old password", type = "password" } })
                @Html.ValidationMessageFor(m => m.oldPassword, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.newPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(m => m.newPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "New Password", type = "password" } })
                @Html.ValidationMessageFor(m => m.newPassword, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.repeatPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(m => m.repeatPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Repeat password", type = "password" } })
                @Html.ValidationMessageFor(m => m.repeatPassword, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>

    <div class="form-group">
        <div>
            <input type="submit" value="Change password" class="btn btn-search" />
        </div>
    </div>
}