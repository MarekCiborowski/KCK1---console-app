<!DOCTYPE html>
<html>
<head>
    <title>Surveys</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>


</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container-box">
            <div class="navbar-header">
                @{ Account account = (Account)Session["CurrentUser"];}
                @{ bool isAuthenticated = account != null;}
                @if (isAuthenticated)
                {
                    <a class="btn-menu" href="@Url.Action("Index", "Home")">Homepage</a>
                    <a class="btn-menu" href="">Surveys</a>
                    <a class="btn-menu" href="@Url.Action("Logout","Authentication")">Logout: @account.nickname</a>
                    <a class="btn-menu" href="">Profile</a>
                    <a class="btn-menu" href="@Url.Action("CreateSurvey","Home")">Create Survey</a>
                }

                else
                {
                    <a class="btn-menu" href="@Url.Action("Login", "Authentication")">Homepage</a>
                    <a class="btn-menu" href="@Url.Action("NewUser", "Authentication")">New account</a>
                }



            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div class="main">
            <div class=" container-main">
                @RenderBody()
            </div>
        </div>
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Day.@DateTime.Now.Month.@DateTime.Now.Year</p>
        </footer>
    </div>

    
</body>
</html>